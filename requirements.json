{
  "dependencies": {
    "Flask": {
      "version": "2.3.0",
      "description": "Web framework for Python",
      "required": true
    },
    "werkzeug": {
      "version": "2.3.0",
      "description": "WSGI utilities and secure password hashing",
      "required": true
    },
    "Jinja2": {
      "version": "3.1.2",
      "description": "Template engine for Flask",
      "required": true
    }
  },
  "dev_dependencies": {
    "pytest": {
      "version": "7.0.0",
      "description": "Testing framework",
      "required": false
    },
    "pytest-flask": {
      "version": "1.2.0",
      "description": "Flask testing utilities",
      "required": false
    }
  },
  "optional_dependencies": {
    "gunicorn": {
      "version": "20.1.0",
      "description": "WSGI HTTP Server for production",
      "use_case": "Production deployment"
    },
    "python-dotenv": {
      "version": "0.21.0",
      "description": "Environment variable management",
      "use_case": "Config management"
    },
    "flask-cors": {
      "version": "4.0.0",
      "description": "CORS support for Flask",
      "use_case": "Enable cross-origin requests"
    },
    "flask-compress": {
      "version": "1.13",
      "description": "Compress responses",
      "use_case": "Performance optimization"
    }
  },
  "python_version": "3.7+",
  "install_command": "pip install -r requirements.txt"
}
